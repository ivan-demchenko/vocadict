@import "defaults"

#player-wrapper
  width 100%

  #buttons
    width 22px
    color #62B1D0
    overflow hidden

  #btn-set
    multiprop(transition, .4s)
    margin-left 0
    width 44px

    .icon-play, .icon-pause
      cursor pointer
      font-size 25px
      width 22px
      display inline-block

      &:hover
        color #37DB79

  &.playing
    #btn-set
      margin-left -22px

  #now-playing, #progress
    left 30px
    right 0



  #now-playing
    top 0
    color #fff
    multiprop(text-shadow, 1px 1px 0px #024C68)

    #label
      white-space nowrap
      overflow hidden
      left 0
      right 100px

    #time
      right 0
      width 90px
      padding-right 10px
      text-align right

  #progress
    top 18px

    #load-progress, #play-progress
      height 1px
      left 0
      top 3px

    #load-progress
      background #3AA6D0

    #play-progress
      background #63DB93

    #tick
      background #62B1D0
      display inline-block
      left 0
      width 6px
      height 6px
      multiprop(border-radius, 3px)
      multiprop(transition, .3s)
      cursor pointer

      &:hover
        background #fff