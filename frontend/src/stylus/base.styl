@import "defaults"

a
  outline none
  &:hover
    text-decoration none

body
  font-family 'Quicksand', Tahoma, Arial, sans-serif
  background #f2f2f2
  padding-top 40px

button
  color #fff
  width 30px
  multiprop(transition, .3s)

  &:hover
    background #00A876
    border-color #00A876

#app-header
  background #0776A0
  z-index 3
  width 100%
  top 0

  #player
    left 121px
    right 498px
    top 7px

#logo
  color #5FD4B1
  float left
  font-size 20px
  font-weight bold
  padding 10px 12px

#logo:hover
  color #fff
  text-shadow 0 0 3px #62B1D0
  text-decoration none

#player
  position absolute

.msg
  padding 5px 10px
  opacity 0
  width 100%
  position fixed
  top 0px
  z-index 2
  multiprop(transition, .3s)

  &.visible
    top 40px
    opacity 1

  &.blue
    background #3AA6D0
    color #fff

  &.red
    background #FF3100
    color #fff

#search-box
  padding 6px 10px 0 0

  input
    padding 5px

#search-mp3-list
  bottom 0
  right 0
  width 30%
  top 40px

#track-lists-wrapper
  width 70%
  top 40px
  bottom 0
  border-right solid 1px #ccc