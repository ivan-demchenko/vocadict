@import "defaults"

body
  font-family 'Quicksand', Tahoma, Arial, sans-serif
  background #f2f2f2
  padding-top 40px

button
  color #fff
  width 30px
  multiprop(transition, .3s)

  &:hover
    background #00A876
    border-color #00A876

#app-header
  background #0776A0
  z-index 3
  width 100%
  top 0

#logo
  color #5FD4B1
  float left
  font-size 20px
  font-weight bold
  padding 10px 12px

#logo:hover
  color #fff
  text-shadow 0 0 3px #62B1D0
  text-decoration none

#player
  padding 0 10px
  float left
  line-height 1
  width 500px
  margin-top 7px

  #mp3-player
    margin-top 7px

.msg
  padding 5px 10px
  opacity 0
  width 100%
  position fixed
  top 0px
  z-index 2
  multiprop(transition, .3s)

  &.visible
    top 40px
    opacity 1

  &.blue
    background #3AA6D0
    color #fff

  &.red
    background #FF3100
    color #fff

#search-box
  padding 6px 10px 0 0

  input
    padding 5px

#search-mp3-list
  bottom 0
  right 0
  width 30%
  top 40px

#track-lists-wrapper
  width 70%
  top 40px
  bottom 0
  border-right solid 1px #ccc

.tracks-list
  font-size 12px
  position relative

  header
    background #FF5900
    color #fff
    font-weight bold
    font-size 15px
    padding 2px 5px
    position relative
    multiprop(text-shadow, 1px 1px 0px #A62000)

    .icon-remove
      cursor pointer
      display block
      font-style normal
      position absolute
      top 4px
      right 4px

  .item
    border-bottom solid 1px #ccc

    .track-line
      a
        margin-left 4px
        &:hover
          text-decoration none
      span
        margin 4px 0 0 4px
      &:hover
        background #f0f0f0

    .sub-track
      padding-left 30px
