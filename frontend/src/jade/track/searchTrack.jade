extends proto


block buttons
  button.play.flt-l
    i.icon-play
  button.like.flt-l
    i.icon-heart


block labels
  span.disp-ib
    <% if (typeof(artist) === 'string') { %>
    strong <%= artist %>
    <% } %>
    <% if (typeof(artist) === 'object') { %>
    strong <%= artist.name %>
    <% } %>

    <% if (typeof(title) !== 'undefined') { %>
    span - <%= title %>
    <% } %>
    <% if (typeof(name) !== 'undefined') { %>
    span - <%= name %>
    <% } %>