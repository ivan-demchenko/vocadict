div.track-line(data-type="search")

  button
    i.icon-play
  button
    i.icon-heart

  span
    <% if (typeof(artist) === 'string') { %>
    strong <%= artist %>
    <% } %>
    <% if (typeof(artist) === 'object') { %>
    strong <%= artist.name %>
    <% } %>

    <% if (typeof(title) !== 'undefined') { %>
    span - <%= title %>
    <% } %>
    <% if (typeof(name) !== 'undefined') { %>
    span - <%= name %>
    <% } %>